# Bot configuration settings

# Telegram Bot API Key (get from @BotFather)
TELEGRAM_API_KEY=your-telegram-bot-token

# Allowed User ID (Telegram user ID who can use the bot)
# To get your user ID, message @userinfobot on Telegram
ALLOWED_USER_ID=123456789

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-key

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Claude Model (optional, defaults to claude-3-5-sonnet-20250122)
CLAUDE_MODEL=claude-3-5-sonnet-20250122

# Jira Configuration (for /ticket command)
# Jira Cloud URL (e.g., https://your-domain.atlassian.net)
JIRA_URL=https://your-domain.atlassian.net
# Jira user email
JIRA_EMAIL=your-email@example.com
# Jira API token (create at https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-jira-api-token

# GitHub Configuration (for worker service)
# GitHub personal access token (for cloning private repos)
GITHUB_TOKEN=ghp_your-github-token

# Redis Configuration (for worker communication)
REDIS_URL=redis://redis:6379/0

# MongoDB Configuration
MONGODB_URI=mongodb://hermes_user:hermes_pass@mongodb:27017/hermes_bot?authSource=admin

# Default AI Provider (openai or claude)
DEFAULT_AI_PROVIDER=claude

# Conversation Settings
MAX_CONTEXT_MESSAGES=20
MAX_CONTEXT_TOKENS=4000

# Logging
LOG_LEVEL=INFO

# MongoDB Authentication (for docker-compose)
MONGO_INITDB_ROOT_USERNAME=hermes_user
MONGO_INITDB_ROOT_PASSWORD=hermes_pass
MONGO_INITDB_DATABASE=hermes_bot
