# Bot configuration settings

# Telegram Bot API Key (get from @BotFather)
TELEGRAM_API_KEY=your-telegram-bot-token

# Allowed User ID (Telegram user ID who can use the bot)
# To get your user ID, message @userinfobot on Telegram
ALLOWED_USER_ID=123456789

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-key

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# MongoDB Configuration
MONGODB_URI=mongodb://hermes_user:hermes_pass@mongodb:27017/hermes_bot?authSource=admin

# Default AI Provider (openai or claude)
DEFAULT_AI_PROVIDER=claude

# Conversation Settings
MAX_CONTEXT_MESSAGES=20
MAX_CONTEXT_TOKENS=4000

# Logging
LOG_LEVEL=INFO

# MongoDB Authentication (for docker-compose)
MONGO_INITDB_ROOT_USERNAME=hermes_user
MONGO_INITDB_ROOT_PASSWORD=hermes_pass
MONGO_INITDB_DATABASE=hermes_bot
